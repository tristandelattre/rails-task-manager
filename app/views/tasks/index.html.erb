<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
       <span> ✅ </span>
      <% else %>
        <span>❌</span>
      <% end %> <%= link_to task.title, task_path(task.id) %> <%= link_to "🗑", destroytask_path(task.id), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
<hr>

<p> <%= link_to "+ Add a New Task", newtask_path %></p>
